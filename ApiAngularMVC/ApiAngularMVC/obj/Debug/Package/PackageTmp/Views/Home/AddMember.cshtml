@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/build.css" rel="stylesheet" />
    <title>AddMember</title>
</head>
<body>
    <div class="box box-danger">
        <div class="box-header with-border">
            <i class="ion ion-clipboard"></i>
            <h3 class="box-title">Thêm mới thành viên</h3>
        </div>
        <div class="box-body" ng-controller="AddMemberController">
            <div class="row">
                <div class="col-md-3 col-xs-6 col-lg-3">
                    <div class="form-group">
                        <label>Tên đăng nhập</label>
                        <input type="text" placeholder="Nhập tên đăng nhập" ng-model="m.name" class="form-control input-sm">
                    </div>
                </div>
                <div class="col-md-3 col-xs-6 col-lg-3">
                    <div class="form-group">
                        <label>Họ và tên</label>
                        <input type="text" placeholder="Nhập họ tên" ng-model="m.fullName" class="form-control input-sm">
                    </div>
                </div>
                <div class="col-md-3 col-xs-6 col-lg-3">
                    <div class="form-group">
                        <label>Công ty</label>
                        <select class="form-control input-sm " tabindex="-1" aria-hidden="true" ng-model="Company">
                            <option value="">-- Chọn công ty --</option>
                            <option ng-repeat="x in lstCompany" value="{{x.Id}}">{{x.Name}}</option>
                        </select>
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-3 col-xs-6 col-lg-3">
                    <div class="form-group">
                        <label>Nhập Email</label>
                        <input type="text" placeholder="Nhập email" ng-model="m.Email" class="form-control input-sm">
                    </div>
                </div>
                <div class="col-md-3 col-xs-6 col-lg-3">
                    <div class="form-group">
                        <label>Nhập địa chỉ</label>
                        <input type="text" placeholder="Nhập địa chỉ" ng-model="m.Address" class="form-control input-sm">
                    </div>
                </div>
                <div class="col-md-3 col-xs-6 col-lg-3">
                    <div class="form-group">
                        <label>Nhập số điện thoại</label>
                        <input type="text" placeholder="Nhập số điện thoại" ng-model="m.Phone" class="form-control input-sm">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3 col-xs-6 col-lg-3">
                    <div class="form-group">
                        <label>Mật khẩu</label>
                        <input type="password" placeholder="Nhập mật khẩu" ng-model="m.pass" class="form-control input-sm">
                    </div>
                </div>
                <div class="col-md-3 col-xs-6 col-lg-3">
                    <div class="form-group">
                        <label>Nhập lại mật khẩu</label>
                        <input type="password" placeholder="Nhập lại mật khẩu" ng-model="m.repass" class="form-control input-sm">
                    </div>
                </div>
