@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/Angular/AngularRoute.js"></script>
    <script src="~/Scripts/Angular/KhachHang.js"></script>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <div data-ng-app="app" ng-controller="ctrl">
        <table border="1px" style="margin-top:50px">
            <tr>
                <th>MaKhachHang</th>
                <th>TenKhachHang</th>
                <th>DiaChi</th>
                <th></th>
                <th></th>
            </tr>
            <tr data-ng-repeat="x in custosmers">
                <td>{{x.MaKhachHang}}</td>
                <td>{{x.TenKhachHang}}</td>
                <td>{{x.DiaChi}}</td>
                <td><button ng-click="edit(x)">Edit</button></td>
                <td><button>Delete</button></td>
            </tr>
        </table>
        <div>
            <table ng-hide="isEdit">
                <tr>
                    <td>MaKhachHang</td>
                    <td><input type="text" ng-model="cus.MaKhachHang" /></td>
                </tr>
                <tr>
                    <td>TenKhachHangachHang</td>
                    <td><input type="text" ng-model="cus.TenKhachHang" /></td>
                </tr>
                <tr>
                    <td>DiaChi</td>
                    <td><input type="text" ng-model="cus.DiaChi" /></td>
                </tr>

            </table> <input type="submit" ng-click="update(cus)" value="Save" />
        </div>
    </div>
</body>
</html>
