
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>InfoUser</title>
</head>
<body>
    <div class="box box-danger">
        <div class="box-header with-border">
            <i class="ion ion-clipboard"></i>
            <h3 class="box-title">Thông tin tài khoản</h3>
        </div>
        <div class="box-body" ng-controller="InfoUserController">
            <div class="col-md-6">
                <div class="row">
                    <h4>Thay đổi mật khẩu</h4>
                    <div class="col-md-10">
                        <div class="form-group">
                            <label>Mật khẩu cũ</label>
                            <input type="password" placeholder="Nhập mật khẩu" ng-model="passOld" class="form-control input-sm">
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <label>Mật khẩu mới</label>
                            <input type="password" placeholder="Nhập mật khẩu" ng-model="pass" class="form-control input-sm">
                        </div>
                    </div>

                    <div class="col-md-10">
                        <div class="form-group">
                            <label>Nhập lại mật khẩu</label>
                            <input type="password" placeholder="Nhập lại mật khẩu" ng-model="repass" class="form-control input-sm">
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="form-group">
                        <button class="btn btn-primary btn-sm" id="changePasss"style="margin-left:40%;" ng-click="changePass()"><i class="fa fa-plus-circle"></i>Cập nhật</button>

                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="row">
                    <h4>Thông tin tài khoản</h4>
                    <div class="col-md-10">
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input type="text" placeholder="Nhập tên đăng nhập" ng-model="x.Name" class="form-control input-sm">
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <label>Họ và tên</label>
                            <input type="text" placeholder="Nhập họ tên" ng-model="x.UserName" class="form-control input-sm">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-10">
                        <div class="form-group">
                            <label>Nhập Email</label>
                            <input type="text" placeholder="Nhập email" ng-model="x.Email" class="form-control input-sm">
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <label>Nhập địa chỉ</label>
                            <input type="text" placeholder="Nhập địa chỉ" ng-model="x.Address" class="form-control input-sm">
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <label>Nhập số điện thoại</label>
                            <input type="text" placeholder="Nhập số điện thoại" ng-model="x.Phone" class="form-control input-sm">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group" >
                        <button class="btn btn-primary btn-sm" style="margin-left:40%;" ng-click="changeInfo()"><i class="fa fa-plus-circle"></i>Lưu thay đổi</button>

                    </div>
                </div>
            </div>


            @*<div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <button class="btn btn-primary btn-sm" ng-click="addMember()" ng-show="(roleMenu.IsAdd)"><i class="fa fa-plus-circle"></i> Thêm mới</button>
                        <input type="button" class="btn btn-primary btn-sm" style="width: 80px" value="Refresh" ng-click="refresh()">
                        <a href="#!ListMember" style="font-size:14px;">Danh sách tài khoản</a>
                    </div>
                </div>
            </div>*@
            <div class="bs-example">
                <div class="btn-toolbar text-center">
                    <div class="btn-group btn-group-sm" id="pageAsign">
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
