                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="item in DsNhom">
                                        <td class="center">{{$index + 1}}</td>
                                        <td>{{item.ID}}</td>
                                        <td ng-click="clickContent($index)" data-dismiss="modal" aria-hidden="true">
                                            {{item.Name}}
                                        </td>

                                        <td>
                                            <a onclick="Edit()">Edit</a>
                                        </td>
                                        <td>
                                            <a href="#">Delete</a>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>

                        <div class="modal-footer">

                            <div class="box-tools pull-right pagination-contain">
                                <ul id="paginationRevice" class="pagination pagination-sm no-margin">
                                    <li class="page-item first disabled"><a href="#" class="page-link">&lt;&lt;</a></li>
                                    <li class="page-item prev disabled"><a href="#" class="page-link">&lt;</a></li>
                                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                                    <li class="page-item next disabled"><a href="#" class="page-link">&gt;</a></li>
                                    <li class="page-item last disabled"><a href="#" class="page-link">&gt;&gt;</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
