                            </div>

                        </form>

                        <br>
                        <form role="form" class="form-inline ng-pristine ng-valid">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon" style="background: #126dce;color: white">
                                        Tìm kiếm
                                    </div>
                                    <input type="text" placeholder="Search" class="form-control">
                                </div>
                            </div>
                        </form>
                        <br>
                        <a href="#myModal1" data-backdrop="true" ng-click="ThemMoi()" data-toggle="modal">+Thêm Mới</a>

